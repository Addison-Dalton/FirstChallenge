@model FirstChallenge.Models.ComicBook
@{
    ViewBag.Title = "Details";
}

<h2>Details about @Model.ComicTitle #@Model.EpisodeNumber</h2>
<h3>Episode title: @Model.EpisodeTitle</h3>
<p>
    <strong>Starring: </strong> @String.Join(",", Model.Characters.Select(p => p.Name).ToArray());
</p>

<hr />
@Html.ActionLink("Back to all comics", "Index","ComicBook")

